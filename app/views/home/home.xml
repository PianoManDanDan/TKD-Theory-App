<Page loaded="loaded">
	<Page.actionBar>
    	<ActionBar title="Tae Kwon-Do Theory" class="custom-action-bar" >
    		<ActionBar.ActionItems>
    			<android>
	    			<ActionItem tap="onAbout" 
	    				text="About" android.position="popup" color="white" ></ActionItem>
	    		</android>
	    		<ios>
	    			<ActionItem>
	    				<ActionItem.actionView>
	    					<Button text="About" tap="onAbout" position="right" ></Button>
	    				</ActionItem.actionView>
	    			</ActionItem>
	    		</ios>
	    	</ActionBar.ActionItems>
    	</ActionBar>
	</Page.actionBar>
	<ScrollView orientation="vertical">
	    <StackLayout orientation="vertical" > 
	    	<!-- https://docs.nativescript.org/ui/ns-ui-widgets/styling#gradients for gradient buttons??? -->
	    	<Button text="General Information" horizontalAlignment="center" tap="nya" class="general" width="90%" marginTop="18" ></Button>
	    	<WrapLayout orientation="horizontal" horizontalAlignment="center">
		    	<Button text="White          Belt" tap="nya" class="white" ></Button>
		    	<Button text="Yellow          Tag" tap="nya" class="yellow-stripe" ></Button>
		    	<Button text="Yellow         Belt" tap="nya" class="yellow" ></Button>
		    	<Button text="Green          Tag" tap="nya" class="green-stripe" ></Button>
		    	<Button text="Green          Belt" tap="nya" class="green" ></Button>
		    	<Button text="Blue          Tag" tap="nya" class="blue-stripe" ></Button>
		    	<Button text="Blue          Belt" tap="nya" class="blue" ></Button>
		    	<Button text="Red          Tag" tap="nya" class="red-stripe" ></Button>
		    	<Button text="Red          Belt" tap="nya" class="red" ></Button>
		    	<Button text="Black          Tag" tap="nya" class="black-stripe" ></Button>
		    	<Button text="1st          Dan" tap="nya" class="black-1st" ></Button>
		    	<Button text="2nd          Dan" tap="nya" class="black-2nd" ></Button>
		    	<Button text="3rd          Dan" tap="nya" class="black-3rd" ></Button>
		    	<Button text="4th          Dan" tap="nya" class="black-4th" ></Button>
		    	<Button text="5th          Dan" tap="nya" class="black-5th" marginBottom="18"></Button>
		    	<Button text="6th          Dan" tap="nya" class="black-6th" marginBottom="18"></Button>
		    </WrapLayout>
		</StackLayout>
</ScrollView>
</Page>