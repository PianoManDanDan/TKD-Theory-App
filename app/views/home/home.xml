    	<Button text="Red Tag" horizontalAlignment="left" tap="nya" class="blue" ></Button>

    	<Button text="Red Belt" horizontalAlignment="left" tap="nya" class="red" ></Button>

    	<Button text="Black Tag" horizontalAlignment="left" tap="nya" class="red" ></Button>

    	<Button text="1st Degree" horizontalAlignment="left" tap="nya" class="black" ></Button>

